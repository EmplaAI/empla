{
  "name": "documentation-tests",
  "version": "1.0.0",
  "description": "Test suite for project documentation",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:markdown": "markdownlint '*.md'",
    "validate:links": "node tests/validate-links.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "markdown-link-check": "^3.11.2",
    "markdownlint": "^0.31.0",
    "markdownlint-cli": "^0.37.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.md"
    ]
  }
}
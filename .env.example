# ===========================================================================
# empla Configuration
# ===========================================================================
# Copy to .env and fill in your values:
#   cp .env.example .env
#
# Settings are loaded by pydantic-settings. EMPLA_* prefixed env vars map
# to EmplaSettings fields. API keys use standard names (no prefix).
# ===========================================================================

# -- Environment ---------------------------------------------------------------
# EMPLA_ENV=development

# -- Database ------------------------------------------------------------------
# DATABASE_URL=postgresql+asyncpg://localhost/empla_dev

# -- API Server ----------------------------------------------------------------
# Defaults to 127.0.0.1 (loopback). Set to 0.0.0.0 for production/containers.
# EMPLA_API_HOST=0.0.0.0
# EMPLA_API_PORT=8000
# EMPLA_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# -- Frontend (for OAuth callback redirects) -----------------------------------
# EMPLA_FRONTEND_BASE_URL=http://localhost:5173

# -- Logging -------------------------------------------------------------------
# EMPLA_LOG_LEVEL=INFO

# -- LLM Defaults -------------------------------------------------------------
# EMPLA_LLM_PRIMARY_MODEL=gemini-3-flash-preview
# EMPLA_LLM_FALLBACK_MODEL=claude-sonnet-4
# EMPLA_LLM_EMBEDDING_MODEL=text-embedding-3-large
# EMPLA_LLM_TEMPERATURE=0.7
# EMPLA_LLM_MAX_TOKENS=4096
# EMPLA_LLM_MAX_RETRIES=3
# EMPLA_LLM_TIMEOUT_SECONDS=60
# EMPLA_LLM_ENABLE_COST_TRACKING=true

# -- LLM API Keys (at least one provider required) ----------------------------

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-...

# OpenAI
# OPENAI_API_KEY=sk-...

# Google Vertex AI (or set GOOGLE_CLOUD_PROJECT as fallback)
# VERTEX_PROJECT_ID=my-gcp-project
# EMPLA_VERTEX_LOCATION=us-central1

# Azure OpenAI
# AZURE_OPENAI_API_KEY=...
# AZURE_OPENAI_ENDPOINT=https://myresource.openai.azure.com
# AZURE_OPENAI_DEPLOYMENT=gpt-4o-deployment
# EMPLA_AZURE_OPENAI_API_VERSION=2024-08-01-preview
